<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KonfirmasiActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"
            android:layout_centerHorizontal="true"
            android:id="@+id/idImgKonform"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idHaiUser"
            android:text="Hai Username"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/idImgKonform"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/masukanSandi"
            android:text="Masukan kata sandi untuk melanjutkan"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/idHaiUser"/>
        <EditText
            android:id="@+id/editTxtPassKonfirm"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_below="@+id/masukanSandi"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custum_input"
            android:ems="10"
            android:hint="Password"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="15dp"
            android:inputType="textPassword" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idLupaSandi"
            android:layout_marginTop="15dp"
            android:text="Lupa Kata Sandi ?"
            android:layout_marginRight="65dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/editTxtPassKonfirm"/>

    </RelativeLayout>

    <Button
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="Proses Peminjaman"
        android:background="@drawable/custom_button"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>