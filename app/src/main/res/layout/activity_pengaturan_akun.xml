<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PengaturanAkunActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarPengaturan"
        app:titleTextColor="#fff"
        android:background="#17C3B2"
        android:elevation="4dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idTxtToolBook"
            android:textColor="#fff"
            android:text="Pengaturan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true">

<!--        <ProgressBar-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/idProgbar"-->
<!--            style="?android:attr/progressBarStyleLarge"-->
<!--            android:layout_centerHorizontal="true"/>-->

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@+id/toolbarPengaturan">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/idFirstRel">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/idProfl"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah Foto Profil"
                android:layout_marginTop="10dp"
                android:id="@+id/idTxtUbahFoto"
                android:layout_below="@+id/idProfl"
                android:layout_centerHorizontal="true"
                android:textColor="#FF9F1C"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idFirstRel"
            android:text="Informasi Pribadi"
            android:id="@+id/infoPribadi"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondRel"
            android:layout_below="@+id/infoPribadi">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idNamaAkun"
                android:text="Nama"
                android:layout_marginTop="13dp"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idNoHpAkun"
                android:layout_below="@+id/idNamaAkun"
                android:text="No Hp"
                android:layout_marginTop="18dp"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idEmailAkun"
                android:layout_below="@+id/idNoHpAkun"
                android:text="Email"
                android:layout_marginTop="22dp"
                android:textSize="17sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idAlamatAkun"
                android:layout_below="@+id/idEmailAkun"
                android:text="Alamat"
                android:layout_marginTop="22dp"
                android:textSize="17sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdRel"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/infoPribadi"
            android:layout_toRightOf="@+id/secondRel">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idDetailNamaAkun"
                android:textSize="17sp"
                android:hint="Nama "/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idDetailNoHpAkun"
                android:textSize="17sp"
                android:layout_below="@+id/idDetailNamaAkun"
                android:hint="No Hp User"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idDetailEmailAkun"
                android:textSize="17sp"
                android:layout_below="@+id/idDetailNoHpAkun"
                android:hint="Email User" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idDetailAlamatAkun"
                android:layout_below="@+id/idDetailEmailAkun"
                android:hint="Alamat User"
                android:textSize="17sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ubahSandi"
            android:text="Ubah Kata Sandi"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_below="@+id/secondRel"
            android:layout_marginTop="45dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/forthRel"
            android:layout_below="@+id/ubahSandi">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:id="@+id/layPass">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idPasswordBaru"
                    android:lines="2"
                    android:hint="Kata sandi baru"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/layPass"
                android:id="@+id/layPass2">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idUlangiPasswordBaru"
                    android:lines="2"
                    android:hint="Ulangi Kata sandi baru"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/idBtnSimpanPerubahanAkun"
                android:text="Simpan Perubahan"
                android:background="@drawable/custom_button"
                android:layout_below="@+id/layPass2"
                android:layout_marginTop="50dp"
                android:textColor="#fff"
                android:textAllCaps="false"/>
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>